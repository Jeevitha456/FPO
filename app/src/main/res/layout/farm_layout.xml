<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12dp"
    app:cardCornerRadius="@dimen/_2dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_farm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52dp"
        android:background="@color/light_blue"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/farm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginBottom="@dimen/_19dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:text="@string/farm"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/farm_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_24dp"
            android:paddingTop="@dimen/_24dp"
            android:src="@drawable/dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/farm_title"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_farmdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_17dp"
        android:background="@color/white"
        android:padding="@dimen/_16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/farmcardtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14dp"
            android:layout_marginBottom="@dimen/_19dp"
            android:gravity="center_vertical"
            android:text="@string/farm"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_35dp"
            android:gravity="center_vertical"
            android:text="@string/save"
            android:textColor="@color/drak_green"
            android:textSize="@dimen/_20sp"
            app:layout_constraintRight_toLeftOf="@+id/farm_uparrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/farm_uparrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/uparrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/farmcardtitle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/txt_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_member"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            app:layout_constraintTop_toBottomOf="@id/farmcardtitle"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/manadatory_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:paddingStart="@dimen/_8dp"
            android:src="@drawable/manadatory"
            app:layout_constraintLeft_toRightOf="@+id/txt_member"
            app:layout_constraintTop_toBottomOf="@id/farmcardtitle" />
        <RelativeLayout
            android:id="@+id/member_relative_layout"
            android:layout_width="@dimen/_300dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/_10dp"
            android:paddingStart="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/txt_member"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">
            <Spinner
                android:id="@+id/edt_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginBottom="@dimen/_minus15dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:spinnerMode="dropdown" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingEnd="@dimen/_8dp"
                android:src="@drawable/dropdown" />

        </RelativeLayout>



        <TextView
            android:id="@+id/txt_plot_acreage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_plot_acreage"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            app:layout_constraintTop_toBottomOf="@id/member_relative_layout"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/edt_plot_acreage"
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="@dimen/_16dp"
            app:layout_constraintTop_toBottomOf="@id/txt_plot_acreage"
            tools:ignore="LabelFor,MissingConstraints"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/txt_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_upload"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            app:layout_constraintTop_toBottomOf="@id/edt_plot_acreage"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_geolocation_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_plot_geolocation_file"
            android:textColor="@color/gray"
            android:textSize="@dimen/_16sp"
            app:layout_constraintTop_toBottomOf="@id/txt_upload"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/upload_plot_geolocationfile"
            android:layout_width="@dimen/_300dp"
            android:layout_height="@dimen/_45dp"
            android:layout_marginTop="@dimen/_8dp"
            android:autofillHints="@string/_identity_proof"
            android:background="@drawable/dotted_border"
            android:drawableStart="@drawable/upload_icon"
            android:drawableLeft="@drawable/upload_icon"
            android:gravity="center_vertical"
            android:inputType="none"
            android:paddingStart="@dimen/_100dp"
            android:paddingEnd="@dimen/_50dp"
            android:text="@string/_upload_files"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_geolocation_file"
            tools:ignore="LabelFor,MissingConstraints,RtlCompat"
            tools:layout_editor_absoluteX="16dp" />
        <TextView
            android:id="@+id/txt_rabi_crops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_rabbi_crops"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/upload_plot_geolocationfile"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_wheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/wheat_icon"
            app:layout_constraintTop_toBottomOf="@id/txt_rabi_crops"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-3dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_soyabean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/soyabean_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_wheat"
            app:layout_constraintTop_toBottomOf="@id/txt_rabi_crops"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_paddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/paddy_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_soyabean"
            app:layout_constraintTop_toBottomOf="@id/txt_rabi_crops"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_groundnut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/groundnut_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_paddy"
            app:layout_constraintTop_toBottomOf="@id/txt_rabi_crops"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_potato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/potato_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/img_wheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_watermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/watermelon_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_potato"
            app:layout_constraintTop_toBottomOf="@id/img_wheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/fruits_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_watermelon"
            app:layout_constraintTop_toBottomOf="@id/img_wheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_tomato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/tomato_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_fruits"
            app:layout_constraintTop_toBottomOf="@id/img_wheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_rabi_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_45dp"
            android:src="@drawable/right_arrow"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_tomato"
            app:layout_constraintTop_toBottomOf="@id/img_wheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharfi_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_45dp"
            android:src="@drawable/right_arrow"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_khariftomato"
            app:layout_constraintTop_toBottomOf="@id/img_kharifwheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_pomo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/pomo_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/img_potato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_sugarcane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/sugarcane_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_pomo"
            app:layout_constraintTop_toBottomOf="@id/img_potato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_banana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/bananna_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_sugarcane"
            app:layout_constraintTop_toBottomOf="@id/img_potato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/vege_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_banana"
            app:layout_constraintTop_toBottomOf="@id/img_potato"/>

        <TextView
            android:id="@+id/txt_kharif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/_kharif_crops"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/img_pomo"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifwheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/wheat_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/txt_kharif"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifsoyabean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/soyabean_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifwheat"
            app:layout_constraintTop_toBottomOf="@id/txt_kharif"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifpaddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/paddy_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifsoyabean"
            app:layout_constraintTop_toBottomOf="@id/txt_kharif"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifgroundnut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/groundnut_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifpaddy"
            app:layout_constraintTop_toBottomOf="@id/txt_kharif"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifpotato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/potato_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/img_kharifwheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifwatermelon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/watermelon_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifpotato"
            app:layout_constraintTop_toBottomOf="@id/img_kharifwheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_khariffruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/fruits_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifwatermelon"
            app:layout_constraintTop_toBottomOf="@id/img_kharifwheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_khariftomato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/tomato_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_khariffruits"
            app:layout_constraintTop_toBottomOf="@id/img_kharifwheat"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifpomo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/pomo_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/img_kharifpotato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifsugarcane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/sugarcane_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifpomo"
            app:layout_constraintTop_toBottomOf="@id/img_kharifpotato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifbanana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/bananna_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifsugarcane"
            app:layout_constraintTop_toBottomOf="@id/img_kharifpotato"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_kharifveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:src="@drawable/vege_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_kharifbanana"
            app:layout_constraintTop_toBottomOf="@id/img_kharifpotato"/>
        <TextView
            android:id="@+id/txt_farm_livestock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:gravity="center_vertical"
            android:text="@string/live_stock"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/img_kharifpomo"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_dairy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/dairy_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/txt_farm_livestock"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_goat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/goat_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_dairy"
            app:layout_constraintTop_toBottomOf="@id/txt_farm_livestock"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/fish_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_goat"
            app:layout_constraintTop_toBottomOf="@id/txt_farm_livestock"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_poultry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_6dp"
            android:paddingTop="@dimen/_16dp"
            android:layout_marginTop="@dimen/_14dp"
            android:src="@drawable/poultry_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="@+id/img_fish"
            app:layout_constraintTop_toBottomOf="@id/txt_farm_livestock"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
